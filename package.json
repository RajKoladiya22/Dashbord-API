{
  "name": "cpm-backend-prisma",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "vercel-build": "tsc -p tsconfig.json && prisma generate && prisma migrate deploy",
    "build": "npm run vercel-build ",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "prisma:generate": "prisma generate",
    "migration:generate": "prisma migrate dev --name init_",
    "migration:deploy": "prisma migrate deploy",
    "migration:reset": "prisma migrate reset --force",
    "seed": "ts-node prisma/seed.ts",
    "start": "node dist/server.js",
    "start:dev": "cross-env NODE_ENV=development concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "postinstall": "prisma generate",
    "test": "jest",
    "prisma:gen": "dotenv -e .env.$NODE_ENV -- npx prisma generate",
    "prisma:migrate": "dotenv -e .env.$NODE_ENV -- npx prisma migrate dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "vercel": "^41.7.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.3",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.6.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
